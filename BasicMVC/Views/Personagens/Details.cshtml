@model BasicMVC.Models.Personagem
@inject LanguageService localizer

@{
    ViewData["Title"] = "Details";
}

<h1>@localizer.Get("Details")</h1>

<div>
    <h4>@localizer.Get("Personagem")</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @localizer.Get("Name")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @localizer.Get("Descricao")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@localizer.Get("Edit")</a> |
    <a asp-action="Index">@localizer.Get("Back to List")</a>
</div>
